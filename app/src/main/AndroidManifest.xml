<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.easybuild.android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/easybuild_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".CompareActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".UserInfoActivity" />
        <activity
            android:name=".SearchActivity"
            android:label="" />
        <activity
            android:name=".DisplayActivity"
            android:theme="@style/DisplayActivityTheme" />
        <activity android:name=".FavoriteActivity" />
        <activity android:name=".PlanActivity" />
        <activity android:name=".FreePlanActivity" />
        <activity android:name=".ArticleActivity" />
        <activity android:name=".ShowArticleActivity"></activity>
    </application>

</manifest>